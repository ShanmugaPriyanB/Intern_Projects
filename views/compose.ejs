<% layout('layout/main') -%>
<% block('title', 'Compose') -%>


<div class="container compose__container">
  <h1 class="blog-heading ">Compose</h1>
  <form class="" action="/compose" method="post" style=" max-width: 50%; margin: 0 auto; ">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle">
    </div>
    <div class="form-group">
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>
</div>


